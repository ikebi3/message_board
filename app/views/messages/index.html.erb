<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br />
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
<div>
  <div>名前:</div>
  <%= f.text_field :name %>
</div>
<div>
  <div>内容:</div>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
